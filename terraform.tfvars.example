# ======================
# ПРОЕКТ ТА СЕРЕДОВИЩЕ
# ======================

# Назва проекту (обов'язково)
project_name = "my-awesome-project"

# Середовище розгортання (обов'язково)  
environment = "dev"

# Власник проекту (обов'язково)
owner = "team-name"

# AWS регіон
aws_region = "us-east-1"

# ======================
# МЕРЕЖЕВІ НАЛАШТУВАННЯ
# ======================

# CIDR блок для VPC
vpc_cidr_block = "10.0.0.0/16"

# Кількість підмереж (буде створено стільки публічних та приватних)
subnet_count = 2

# ======================
# S3 НАЛАШТУВАННЯ
# ======================

# Чи дозволити примусове видалення S3 bucket з об'єктами
s3_bucket_force_destroy = false

# ======================
# ECR НАЛАШТУВАННЯ  
# ======================

# Увімкнути сканування образів на вразливості
ecr_scan_on_push = true

# Тип мутабельності тегів (MUTABLE або IMMUTABLE)
ecr_image_tag_mutability = "MUTABLE"

